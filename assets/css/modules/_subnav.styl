/*------------------------------------*\
  $SUBNAV
\*------------------------------------*/
/**
 * Types
 *
 * @section
 * @sectionof Subnav
 *
 * @example
 * <div class="fs-subnav__container">
 *   <nav class="fs-subnav">
 *     <a href="javascript:void(0);" class="fs-subnav__item">Link 1</a>
 *     <a href="javascript:void(0);" class="fs-subnav__item fs-subnav__item--active">Link 2</a>
 *     <a href="javascript:void(0);" class="fs-subnav__item">Link 3</a>
 *     <a href="javascript:void(0);" class="fs-subnav__item">Link 4</a>
 *   </nav>
 * </div>
 *
 * <small class="example__title">With split link</small>
 * <div class="fs-subnav__container">
 *   <nav class="fs-subnav">
 *     <a href="javascript:void(0);" class="fs-subnav__item">Link 1</a>
 *     <a href="javascript:void(0);" class="fs-subnav__item fs-subnav__item--active">Link 2</a>
 *     <div class="fs-subnav__item--split">
 *       <a href="javascript:void(0);" class="fs-subnav__item">Person</a>
 *       <button href="modules" class="fs-subnav__item">â–¾</button>
 *     </div>
 *     <a href="javascript:void(0);" class="fs-subnav__item">Link 4</a>
 *   </nav>
 * </div>
 *
 * <small class="example__title">With secondary link</small>
 * <div class="fs-subnav__container">
 *   <nav class="fs-subnav">
 *     <a href="javascript:void(0);" class="fs-subnav__item">Link 1</a>
 *     <a href="javascript:void(0);" class="fs-subnav__item fs-subnav__item--active">Link 2</a>
 *     <a href="javascript:void(0);" class="fs-subnav__item">Link 3</a>
 *     <a href="javascript:void(0);" class="fs-subnav__item">Link 4</a>
 *     <div class="fs-subnav--secondary">
 *       <a href="javascript:void(0);" class="fs-subnav__item">Link 5</a>
 *     </div>
 *   </nav>
 * </div>
 */


/*
 * 1. Subnav should have a fixed height of 35px.
 * 2. Leftmost and rightmost links should be flush with the grid.
 * 3. Specify font-size because text nodes inherit font-size from the body, but
 *    buttons will be given a font-size from the browsers default style sheet
 */
.fs-subnav {
  margin: 0 auto;
  position: relative;
  top: 50%;
  transform: translateY(-50%)

  &__container {
    background: #fff;
    border-bottom: 1px solid rgba(151,151,151,0.8);
    position: relative;
    height: 35px; /* [1] */
    box-sizing: border-box;

    &:before {
      border: 2px solid rgba(0,0,0,0.05);
      bottom: -3px;
      content: '';
      left: 0;
      position: absolute;
      right: 0;
    }
  }





  /*------------------------------------*\
    $MENU_ITEM
  \*------------------------------------*/
  & > &__item:first-child {
    margin-left: -10px; /* [2] */
  }

  &__item {
    background: transparent;
    border-radius: $border-radius;
    border: 0;
    color: $color-grey-light;
    cursor: pointer;
    display: inline-block;
    font-size: 1rem; /* [3] */
    line-height: $line-height-small;
    margin-right: 1px;
    padding: 4px 10px;
    vertical-align: middle;

    &:active,
    &:focus,
    &:hover,
    &:visited {
      color: $color-grey-light;
      text-decoration: none;
    }

    &:hover,
    &--active {
      background: #e1edc1;
    }





    /*------------------------------------*\
      $SPLIT_ITEM
    \*------------------------------------*/
    &--split {
      display: inline-block;
      vertical-align: middle;

      &:hover .fs-subnav__item {
        background: #f1f8e3;
      }

      .fs-subnav__item {

         &:first-child {
          border-radius: $border-radius 0 0  $border-radius;
          margin-right: 2px;
          float: left;
        }

        &:last-child {
          border-radius: 0 $border-radius $border-radius 0;
          padding: 4px 6px 4px 5px;
          float: left;
        }

        &:hover {
          background: #e1edc1;
        }
      }
    }
  }





  /*------------------------------------*\
    $SECONDARY_NAV
  \*------------------------------------*/
  &--secondary {
    float: right;

    .fs-subnav__item:last-child {
      margin-right: -10px; /* [2] */
    }
  }
}
